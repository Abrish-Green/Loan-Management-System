@model LoanManagementSystem.Models.LoanPlan

@{
    ViewData["Title"] = "Delete";
    ViewBag.LoanPlanActive = "active";

}


<h3  class="text-warning">Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Month)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Month)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Interest)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Interest) %
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MonthlyOverDuePenalty)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MonthlyOverDuePenalty) %
        </dd>
    </dl>
    
    <form asp-action="DeleteLoanPlanConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-info"  asp-action="ViewLoanPlan">Back to List</a>
    </form>
</div>
