@model IEnumerable<LoanManagementSystem.Models.UserAccount>

@{
    ViewData["Title"] = "Payment";
}

<h1>Active Customer List</h1>


<table class="table table-responsive table-striped table-hover w-100 border-0">
    <thead class="thead-dark">
        <tr>
            <th class="w-100">
             Customer
            </th>
            
            <th class="w-100">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.IsAdmin == false)
            {
                <tr>
                    <td class="w-100">
                        @Html.DisplayFor(modelItem => item.User_Name)
                    </td>
                   
                    <td class="w-100">
                        <a asp-action="MakePayment" class="btn btn-primary m-1 p-2" asp-route-id="@item.Id">Make Payment</a> 
                    </td>
                </tr>
            }

        }
    </tbody>
</table>
