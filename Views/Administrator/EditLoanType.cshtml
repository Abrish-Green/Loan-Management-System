@model LoanManagementSystem.Models.LoanType

@{
    ViewData["Title"] = "Edit";
    ViewBag.LoanTypeActive = "active";

}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditLoanType">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="LoanTypeName" class="control-label"></label>
                <input asp-for="LoanTypeName" class="form-control" />
                <span asp-validation-for="LoanTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanDescription" class="control-label"></label>
                <input asp-for="LoanDescription" class="form-control" />
                <span asp-validation-for="LoanDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ViewLoanType" class="btn btn-info">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
