@model IEnumerable<LoanManagementSystem.Models.LoanPlan>

@{
    ViewData["Title"] = "Loan Plan";
    ViewBag.LoanPlanActive = "active";

}

<h1>Loan Plans</h1>

<p>
    <a asp-controller="Administrator" asp-action="LoanPlan" class="btn btn-info">Add New Plan</a>
</p>
<table class="table table-responsive table-striped table-hover w-100 border-0">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Month)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Interest)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MonthlyOverDuePenalty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                   @item.Month Mon
                   
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Interest) &nbsp;%
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MonthlyOverDuePenalty) &nbsp;%
                </td>
                <td>
                    <a asp-action="EditLoanPlan" class="btn btn-primary" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="DetailsLoanPlan" class="btn btn-info" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="DeleteLoanPlan" class="btn btn-danger" asp-route-id="@item.Id"><i class="fa-solid fa-circle-trash"></i>Delete</a>
                </td>
            </tr>
        }

        @{
            if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="4">
                        Empty Database
                    </td>

                </tr>
            }

        }
    </tbody>
</table>
