@model LoanManagementSystem.Models.LoanType

@{
    ViewData["Title"] = "Add Loan Type";
    ViewBag.LoanTypeActive = "active";
}

<h1>Add Loan Type</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateLoanType">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoanTypeName" class="control-label"></label>
                <input asp-for="LoanTypeName" class="form-control" />
                <span asp-validation-for="LoanTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoanDescription" class="control-label"></label>
                <textarea asp-for="LoanDescription" class="form-control"></textarea>
                <span asp-validation-for="LoanDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-danger" asp-action="ViewLoanType">Cancel</a>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
